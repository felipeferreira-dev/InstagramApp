<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/background"
    android:orientation="vertical"
    tools:context=".register.presentation.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:src="@drawable/photo_icon" />

    <TextView
        style="@style/TextViewBaseForm"
        android:layout_gravity="center"
        android:text="@string/photo_register_title"
        android:textSize="24sp"
        android:textStyle="bold" />

    <br.com.dev.felipeferreira.instagramremake.login.presentation.LoadingButton
        android:id="@+id/btn_next_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/add_photo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_jump_register"
        android:text="@string/jump"
        android:layout_gravity="center"
        android:layout_marginBottom="36dp"
        style="@style/ButtonLoginForm.link" />

</LinearLayout>
