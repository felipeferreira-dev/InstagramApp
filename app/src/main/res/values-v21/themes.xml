<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.InstagramRemake" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecundary</item>
        <item name="colorSecondaryVariant">@color/colorSecundaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/NoShadowButton</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TelaDeLoginTheme" parent="Theme.InstagramRemake.NoStatusBar" >
        <item name="background">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="boxStrokeColor">@color/grayBorder</item>
    </style>

 <!-- ****************************************************************************************** -->
    <style name="Theme.InstagramRemake.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.InstagramRemake.NoActionBar.NoStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="NoShadowButton" parent="android:Widget.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>